<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="payment_acquirer_paymob" model="payment.acquirer">
        <field name="name">Paymob</field>
        <field name="display_as">Credit Card (powered by Paymob)</field>
        <field name="module_id" ref="base.module_wt_payment_paymob"/>
        <field name="description" type="html">
            <p>
                Paymob is the easiest way to accept payments via Paymob or credit cards.
            </p>
            <ul class="list-inline">
                <li class="list-inline-item"><i class="fa fa-check"/>Online Payment</li>
                <li class="list-inline-item"><i class="fa fa-check"/>Payment Status Tracking</li>
            </ul>
        </field>
        <field name="provider">paymob</field>
        <field name="state">test</field>
        <field name="pre_msg"><![CDATA[
<p>You will be redirected to the payroc website after clicking on payment button.</p>]]></field>

        <field name="paymob_publishable_key">****</field>
        <field name="paymob_secret_key">****</field>
        <field name="image_128" type="base64" file="wt_payment_paymob/static/src/img/paymob_icon.png"/>
        <field name="redirect_form_view_id"/>
        <field name="support_authorization">False</field>
        <field name="support_fees_computation">False</field>
        <field name="support_refund"></field>
        <field name="support_tokenization">False</field>
    </record>

    <record id="payment_method_paymob" model="account.payment.method">
        <field name="name">Paymob</field>
        <field name="code">paymob</field>
        <field name="payment_type">inbound</field>
    </record>

</odoo>

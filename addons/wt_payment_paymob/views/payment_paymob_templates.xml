<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="checkout" inherit_id="payment.checkout">
        <xpath expr="." position="inside">
            <div id="paymob-checkout"></div>
            <script type="text/javascript" src="https://flashjs.paymob.com/v1/paymob.js"></script>
        </xpath>
    </template>

    <template id="manage" inherit_id="payment.manage">
        <xpath expr="." position="inside">
            <div id="paymob-checkout" class="d-none"></div>
            <script type="text/javascript" src="https://flashjs.paymob.com/v1/paymob.js"></script>
        </xpath>
    </template>
</odoo>
